{
    "name": "ionic-universal-firebase-login",
    "version": "0.1.12",
    "description": "Easy to use universal (browser, Android, iOS) authentication via Firebase for Ionic",
    "author": "Miloš Havlíček",
    "license": "MIT",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc -p .",
        "lint": "tslint -p . --fix",
        "publish:prepare": "rm -rf dist && mkdir dist && cp package.json dist/package.json",
        "publish": "npm run publish:prepare && npm version patch && npm publish"
    },
    "keywords": [
        "ionic",
        "authentication",
        "login",
        "firebase"
    ],
    "prepublish": "npm run lint && npm run build",
    "dependencies": {
        "firebase": "^7.6.2",
        "ngx-cacheable": "^1.3.2",
        "rxjs": "^6.5.4",
        "zone.js": "~0.9.1"
    },
    "peerDependencies": {
        "@angular/common": ">=6.0.0 <9 || ^9.0.0-0",
        "@angular/core": "^8.2.14",
        "@angular/fire": "^5.3.0",
        "@angular/forms": "^8.2.14",
        "@angular/router": "^8.2.14",
        "@ionic-native/core": "^5.19.1",
        "@ionic/angular": "^4.11.7"
    },
    "optionalDependencies": {
        "@ionic-native/facebook": "^5.19.1",
        "@ionic-native/google-plus": "^5.19.1"
    },
    "devDependencies": {
        "@types/jasmine": "^3.5.0",
        "husky": "^4.0.6",
        "lint-staged": "^9.5.0",
        "prettier": "^1.19.1",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-etc": "^1.10.0",
        "tslint-plugin-prettier": "^2.1.0",
        "typescript": "^3.7.4"
    },
    "prettier": {
        "trailingComma": "all"
    },
    "lint-staged": {
        "src/**/*.{ts,tsx}": [
            "tslint -p . --fix",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npx lint-staged"
        }
    }
}
